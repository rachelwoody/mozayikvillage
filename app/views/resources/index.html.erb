<p id="notice"><%= notice %></p>

<h1>Resources</h1>

<table>
  <thead>
    <tr>
      <th>Cost</th>
      <th>Status?</th>

      <th>Index</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>

        <td><%= resource.cost %></td>

          <% if resource.purchased == false %>
                <td>still needed</td>
                <% else %>
                <td>bought</td>
            <% end %>
        <td><%= resource.index %></td>
      <td>
      <%= button_to "Donate!", donate_path(resource), :class => "donatebutton", :method => :patch %>
      <td>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource', new_resource_path %>
